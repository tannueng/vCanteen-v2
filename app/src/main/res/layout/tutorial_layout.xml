<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tutorialTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="48sp"
        android:fontFamily="@font/sfprotext_bold"
        android:text="@string/tutorial_one_title"
        android:textColor="#333333"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tutorialDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tutorialTitle"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:text="@string/tutorial_one_desc"
        android:textColor="#333333"
        android:fontFamily="@font/sfprotext_regular"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/tutorialPic"
        android:layout_width="290dp"
        android:layout_height="180dp"
        android:layout_below="@id/tutorialDesc"
        android:background="@drawable/ic_tutorialone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

</RelativeLayout>