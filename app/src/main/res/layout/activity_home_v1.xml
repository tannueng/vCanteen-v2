<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homev1Activity">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="HOME"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/sfprotext_semibold"
            android:textColor="#ffffff"
            android:textSize="18dp"
            />

<TextView
    android:id="@+id/selectarestaurant"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar"
    android:text="SELECT A RESTAURANT"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:fontFamily="@font/sfprotext_medium"
    android:textColor="@color/com_facebook_button_background_color_focused_disabled"
    />


    <ListView
        android:id="@+id/vendorlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectarestaurant"
        android:layout_above="@id/gradientrect"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        android:fontFamily="@font/sfprotext_semibold"
        android:divider="#00000000"
        android:dividerHeight="15.0dp"
        android:elevation="5dp"
        android:paddingBottom="40dp"
        android:scrollbars="none" />
    <ImageView
        android:id="@+id/gradientrect"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="-130dp"
        android:background="@drawable/mainactivityrectangle"
        android:alpha="0.5"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp">

        <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonprofile"
        app:fabCustomSize="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:elevation="1dp"
            app:borderWidth="0dp"
            android:clickable="true"
        android:src="@drawable/ic_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonprofile"
            android:text="PROFILE"
            android:fontFamily="@font/sfprotext_semibold"
            android:textColor="@color/primaryPink"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonorders"
        android:layout_width="wrap_content"
        app:borderWidth="0dp"
        android:elevation="1dp"
        app:fabCustomSize="70dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_wedding_planning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonorders"
            android:text="ORDERS"
            android:fontFamily="@font/sfprotext_semibold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/primaryPink"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonsettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="70dp"
        app:borderWidth="0dp"
        android:elevation="1dp"
        android:clickable="true"
        android:src="@drawable/ic_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryPink"
            android:text="SETTINGS"
            android:layout_below="@id/buttonsettings"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sfprotext_semibold"/>
    </RelativeLayout>


</RelativeLayout>