<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/popupHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Change"
        android:textColor="@color/primaryPink"
        android:padding="10dp"
        android:fontFamily="@font/sfprotext_semibold"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/popupDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/sfprotext_semibold"
        android:textColor="#4F4F4F"
        android:text="Do you wish to change your account information?"
        android:layout_below="@id/popupHeader"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:fontFamily="@font/sfprotext_semibold"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_bg_rounded_corner_pink"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/popupDescription" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="CANCEL"
            android:textSize="16sp"
            android:textColor="@color/primaryLight"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_alignBaseline="@id/confirmButton"
            />


</RelativeLayout>