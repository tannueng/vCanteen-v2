<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/popup_drop_shadow"
        android:elevation="8dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="291dp">

        <RelativeLayout
            android:layout_width="363dp"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="294dp">

            <TextView
                android:id="@+id/unlink_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/sfprotext_medium"
                android:paddingTop="32dp"
                android:text="@string/unlink_account_text"
                android:textAlignment="center"
                android:textColor="@color/primaryPink"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/popup_payment_unlink_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unlink_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sfprotext_semibold"
                android:gravity="center"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="@string/unlink_description_text"
                android:textAlignment="center"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popup_payment_unlink_description"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingStart="32dp"
                android:paddingLeft="32dp"
                android:paddingEnd="32dp"
                android:paddingRight="32dp"
                android:paddingBottom="32dp">

                <Button
                    android:id="@+id/unlink_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_rounded_corner_pink"
                    android:fontFamily="@font/sfprotext_semibold"
                    android:text="UNLINK"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dismiss_btn"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/sfprotext_semibold"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="DISMISS"
                    android:textAlignment="center"
                    android:textColor="#C4C4C4"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>