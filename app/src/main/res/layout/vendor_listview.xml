<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:scrollbars="none"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@android:color/transparent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vendor_card" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/vendorImage"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/round_vendor_img"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/vendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/next_icon"
                android:layout_toEndOf="@id/vendorImage"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Null"
                android:textColor="#333333"
                android:fontFamily="@font/sfprotext_semibold"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/next_icon"
                android:background="@drawable/ic_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
             />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
